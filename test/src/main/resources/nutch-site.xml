<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->
<configuration>
	<property>
	  <name>fetcher.nextstart.ahead</name>
	  <value>true</value>
	</property>	
	<property>
	  <name>generate.test</name>
	  <value>false</value>
	</property>	
	<!--分值离散化配置： 每个配置用;隔开，每个配置x,y,n表示从x到y之间使用n个分值，sum(n)必须等于桶数 -->
	<property>
		<name>nutch.score.step</name>
		<value>0,1,1</value>
	</property>	
	<property>
	  <name>generate.table.Max</name>
	  <value>1</value> 
	</property>
	<property>
	  <name>generate.table.depth</name>
	  <value>1</value> 
	</property>
	<property>
  	
  	<name>fetcher.threads.timeout.divisor</name>
  		<value>5</value>
	</property>
	<property>
		<name>http.timeout</name>
		<value>15000</value>
	</property>
	<property>
		<name>fetcher.server.min.delay</name>
		<value>2.5</value>
	</property>
	<property>
		<name>fetcher.server.delay</name>
		<value>3.5</value>
	</property>
	<property>
		<name>fetcher.threads.fetch</name>
		<value>400</value>
	</property>
	<property>
		<name>fetcher.threads.per.queue</name>
		<value>4</value>
	</property>
	<property>
	  <name>fetcher.queue.depth.multiplier</name>
	  <value>1000</value>
	</property>
	<property>
	  <name>fetcher.max.exceptions.per.queue</name>
	  <value>40</value>
	</property>
	
	<property>
		<name>generate.max.count</name>
		<value>200</value>
	</property>
	<property>
		<name>db.ignore.external.links</name>
		<value>false</value>
	</property>
<!--	
	<property>
		<name>plugin.folders</name>
		<value>./build/plugins</value>
	</property>
-->	
	<property>
		<name>plugin.includes</name>
		<value>protocol-http|urlfilter-regex|urlfilter-prefix|parse-(html|tika)|htmlparsefilter-topical|index-(basic|anchor)|indexer-solr|scoring-topic|urlnormalizer-(pass|regex|basic)
		</value>
	</property>
	<property>
		<name>http.agent.name</name>
		<value>nutch</value>
	</property>

	<!-- db -->
	<property>
		<name>db.signature.class</name>
		<value>org.apache.nutch.wind.TextProfileSignatureChinese</value>
	</property>
	<property>
		<name>db.fetch.interval.default</name>
		<value>86400</value>
	</property>
	<property>
		<name>crawl.gen.delay</name>
		<value>86400000</value>
	</property>
	<property>
		<name>db.max.outlinks.per.page</name>
		<value>-1</value>
	</property>

	<!-- generate -->
	<property>
		<name>generate.update.crawldb</name>
		<value>true</value>
	</property>

	<!-- fetch -->
	<property>
		<name>http.max.delays</name>
		<value>3</value>
	</property>
	<property>
		<name>fetcher.max.crawl.delay</name>
		<value>0</value>
	</property>
	<property>
		<name>fetcher.parse</name>
		<value>false</value>
	</property>
	<property>
		<name>http.content.limit</name>
		<value>102400</value>
	</property>
	<property>
		<name>parser.timeout</name>
		<value>30</value>
	</property>
